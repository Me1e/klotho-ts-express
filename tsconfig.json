{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "sourceRoot": "/"
  },
  "exclude": [
    "**/*.js",
    "dist/**",
    "compiled",
    "compiledTestOutput",
    "static/*",
    "static/compiler-test-sources/compiled/**",
    "merger/**"
  ],
  "lib": ["ES2020"]
}
