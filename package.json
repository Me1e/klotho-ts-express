{
  "name": "klotho-ts-express",
  "scripts": {
    "start": "ts-node src/index.ts",
    "serve": "tsc && node dist/index.js",
    "up": "tsc && klotho . --app ppap --provider aws && pulumi config set aws:region ap-northeast-2 --cwd 'compiled/' -s 'ppap' && cd compiled && npm i && pulumi up --yes && cd ..",
    "down": "cd compiled && pulumi destroy --yes && cd .."
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "@types/uuid": "^9.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "uuid": "^9.0.0"
  }
}
